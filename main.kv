#:import WipeTransition kivy.uix.screenmanager.WipeTransition
<ResponsiveView>:

<MobileView>
    MDRectangleFlatIconButton:
        icon: "android"
        text: "Mobile"
        pos_hint: {"center_x": .5, "center_y": .5}


<TabletView>
    MDRectangleFlatIconButton:
        icon: "android"
        text: "Table"
    MDRectangleFlatIconButton:
        icon: "android"
        text: "Table"
    MDRectangleFlatIconButton:
        icon: "android"
        text: "Table"


<DesktopView>
    id: desktop_view
    MDBoxLayout:
        orientation:'horizontal'
        #MDBoxLayout:# Left side bar
        #    size_hint_x: .08
        #    md_bg_color: app.theme_cls.primary_dark
        MDBoxLayout:
            size_hint_x: None
            width: navigation_rail.width
            MDNavigationRail:
                id: navigation_rail
                md_bg_color: app.theme_cls.primary_dark
                text_color_item_normal: "white"
                text_color_item_active: app.theme_cls.primary_light
                icon_color_item_normal: "white"
                icon_color_item_active: app.theme_cls.primary_dark
                selected_color_background: app.theme_cls.primary_light

                MDNavigationRailItem:
                    text: "Home"
                    icon: "home"

                MDNavigationRailItem:
                    text: "Customers"
                    icon: "account"

                MDNavigationRailItem:
                    text: "Update"
                    icon: "refresh"

                MDNavigationRailItem:
                    text: "Add New"
                    icon: "plus"

                MDNavigationRailItem:
                    text: "Search"
                    icon: "magnify"

                MDNavigationRailItem:
                    text: "Report_1"
                    icon: "file-document"

                MDNavigationRailItem:
                    text: "Report_2"
                    icon: "chart-line"

        Product:
            id: _Product
            size_hint_x: .67

            #size_hint_x: None
            #width: dp(950)
        Orders:
            id: _orders
            size_hint_x: .25

#________________________





########## Search
<Content>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "60dp"
    error: ''
    MDTextField:
        id: _code
        hint_text: "Code (in this format: SH-01 or H-12)"
        helper_text: root.error
        helper_text_mode: "on_error"
########## Common widgets
<Widget1@Widget>:

    size_hint_y: None
    height: dp(1)
    canvas:
        Color:
            rgba: 128/255, 128/255, 128/255, .5
        Rectangle:
            pos: self.x, self.y
            size: root.width - dp(0), self.height

