#:import WipeTransition kivy.uix.screenmanager.WipeTransition
<ResponsiveView>:

<MobileView>
    MDRectangleFlatIconButton:
        icon: "android"
        text: "Mobile"
        pos_hint: {"center_x": .5, "center_y": .5}


<TabletView>
    MDRectangleFlatIconButton:
        icon: "android"
        text: "Table"
    MDRectangleFlatIconButton:
        icon: "android"
        text: "Table"
    MDRectangleFlatIconButton:
        icon: "android"
        text: "Table"


<DesktopView>
    id: desktop_view
    MDBoxLayout:
        orientation:'horizontal'
        MDBoxLayout:
            size_hint_x: None
            width: navigation_rail.width
            MDNavigationRail:
                id: navigation_rail
                md_bg_color: app.theme_cls.primary_dark
                text_color_item_normal: "white"
                text_color_item_active: app.theme_cls.primary_light
                icon_color_item_normal: "white"
                icon_color_item_active: app.theme_cls.primary_dark
                selected_color_background: app.theme_cls.primary_light

                MDNavigationRailItem:
                    text: "Home"
                    icon: "home"
                    on_release:   
                        root.ids._Product.current = 'Product_first' 

                MDNavigationRailItem:
                    text: "Customers"
                    icon: "account"
                    on_release:   
                        app.root.show_customers() 

                MDNavigationRailItem:
                    text: "Update"
                    icon: "refresh"
                    on_release:   
                        app.root.see_orders() 

                MDNavigationRailItem:
                    text: "Add New"
                    icon: "plus"
                    on_release:
                        app.root.Add_new()
                MDNavigationRailItem:
                    text: "Search"
                    icon: "magnify"
                    on_release:
                        app.root.search_action()
                MDNavigationRailItem:
                    text: "Mo. Sales"
                    icon: "chart-line"
                    on_release:
                        app.root.monthly_sales_report()
                MDNavigationRailItem:
                    text: "Report_2"
                    icon: "file-document"
                    on_release:
                        app.root.best_customers()

        Product:
            id: _Product
            size_hint_x: .67

            #size_hint_x: None
            #width: dp(950)
        Orders:
            id: _orders
            size_hint_x: .25

#________________________
<Content_customers>:
    orientation: 'vertical'
    size_hint_y: None
    height: "25dp"
    id: ''
    name: ''
    last_name: ''
    phone: ''
    BoxLayout:
        orientation:'horizontal'
        MDLabel:
            text: root.id
            markup: True
        MDLabel:
            text: root.name
            markup: True
        MDLabel:
            text: root.last_name
            markup: True
        MDLabel:
            text: root.phone
            markup: True
    Widget1:
        
        

########## Search
<Content_search>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "60dp"
    error: ''
    MDTextField:
        id: _code
        hint_text: "Code (in this format: SH-01 or H-12)"
        helper_text: root.error
        helper_text_mode: "on_error"
########## Common widgets
<Widget1@Widget>:

    size_hint_y: None
    height: dp(1)
    canvas:
        Color:
            rgba: 128/255, 128/255, 128/255, .5
        Rectangle:
            pos: self.x, self.y
            size: root.width - dp(0), self.height

